<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<project basedir="." default="main" name="codeLibs">
	<!--// import //-->
	<import file="ant-globalsConfig.xml" />
	<property name="copyToDir" value="/C:/hdsgz/copy" />
	<property name="deployToDir" value="/C:/hdsgz/autoDeploy" />

	<target name="main">
		<antcall target="cleanOld" />
		<antcall target="deployNew" />
	</target>

	<target name="cleanOld">
		<echo><![CDATA[:: 事先清理旧文件]]></echo>
		<delete failonerror="false">
			<fileset dir="${deployToDir}/libs/">
				<include name="**/*" />
			</fileset>
		</delete>
	</target>

	<target name="deployNew">
		<echo><![CDATA[:: 复制新文件]]></echo>
		<copy todir="${deployToDir}/libs/">
			<fileset dir="${copyToDir}/libs/">
				<include name="**/*" />
			</fileset>
		</copy>
	</target>

</project>
