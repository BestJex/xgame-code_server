<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<project basedir="." default="main" name="signinServer">
	<!--// import //-->
	<import file="../../all_config/antDef/ant-jarOneProj.xml" />

	<property name="copyToDir" value="/C:/hdsgz/copy" />
	<property name="deployToDir" value="/C:/hdsgz/autoDeploy" />

	<target name="main">
		<antcall target="cleanOld" />
		<antcall target="deployNew" />
	</target>

	<target name="cleanOld">
		<echo><![CDATA[:: 事先清理旧文件]]></echo>
		<delete failonerror="false">
			<fileset dir="${deployToDir}/signin_server/">
			    <include name="config/*.template" />
				<include name="libs/*" />
			</fileset>
		</delete>
	</target>

	<target name="deployNew">
		<echo><![CDATA[:: 复制新文件]]></echo>
		<copy todir="${deployToDir}/signin_server/">
			<fileset dir="${copyToDir}/signin_server/">
				<include name="**/*" />
			</fileset>
		</copy>
	</target>

</project>
