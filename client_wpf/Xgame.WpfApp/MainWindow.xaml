<Window x:Class="Xgame.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xgame.WpfApp"
        mc:Ignorable="d"
        Title="Xgame.WpfApp" 
        Width="1024" Height="640" 
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="MyStyle.xaml" />
    </Window.Resources>
    <Grid Background="Black">
        <Image x:Name="_imgBG" Width="1000" Height="600" VerticalAlignment="Top" Source="Res/Img/Login/BG_Login.jpg" Margin="8,2,8,0"/>
        <TextBox x:Name="_txtUserName" HorizontalAlignment="Left" Height="24" Margin="461,329,0,0" VerticalAlignment="Top" Width="182" Style="{StaticResource ResourceKey=MyTextBox}" />
        <PasswordBox x:Name="_txtUserPass" HorizontalAlignment="Left" Height="24" Margin="461,388,0,0" VerticalAlignment="Top" Width="182" Style="{StaticResource ResourceKey=MyPasswordBox}" />
        <Button x:Name="_btnRegister" HorizontalAlignment="Left" Margin="392,488,0,0" VerticalAlignment="Top" Width="106" Height="42" Style="{StaticResource ResourceKey=MyButton}">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="Res/Img/Login/Btn_Register.png" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="_btnLogin" HorizontalAlignment="Left" Margin="538,488,0,0" VerticalAlignment="Top" Width="106" Height="42" Style="{StaticResource ResourceKey=MyButton}" Click="_btnLogin_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="Res/Img/Login/Btn_Login.png" />
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
